<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25"
          fx:controller="SaveLoad.saveLoadController"
          alignment="CENTER" hgap="10" vgap="10"
          prefWidth="600.0" prefHeight="400.0">


  <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS" minWidth="50.0" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="50.0" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="50.0" />
  </columnConstraints>


  <rowConstraints>
    <RowConstraints vgrow="ALWAYS" minHeight="30.0" />
    <RowConstraints vgrow="ALWAYS" minHeight="30.0" />
    <RowConstraints vgrow="ALWAYS" minHeight="30.0" />
  </rowConstraints>

  <children>
    <TextField fx:id="fileName" promptText="File Name"
               GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER"
               maxWidth="200" />

    <Button fx:id="saveData" text="Save Data" onAction="#saveData"
            GridPane.rowIndex="1" GridPane.columnIndex="1"
            GridPane.halignment="CENTER" GridPane.valignment="CENTER" />

    <Button fx:id="loadData" text="Load Data" onAction="#LoadData"
            GridPane.rowIndex="1" GridPane.columnIndex="2"
            GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
  </children>
</GridPane>

